generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("LAUNCHBIO_DB_PRISMA_DATABASE_URL")
}

model Page {
  id              String   @id @default(cuid())
  slug            String   @unique
  editToken       String   @unique
  title           String
  description     String?
  eventDateTime   DateTime
  bgType          String
  bgColor         String?
  bgImageUrl      String?
  buttons         String   // JSON stringified array of { label, url }
  showBranding    Boolean  @default(true)
  isPro           Boolean  @default(false)
  views           Int      @default(0)
  ownerEmail      String?
  afterLaunchText String?
  analyticsId     String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  owner           User?    @relation(fields: [ownerId], references: [id])
  ownerId         String?

  @@index([ownerId])
  @@index([createdAt])
  @@index([slug])
}

model User {
  id            String     @id @default(cuid())
  email         String     @unique
  passwordHash  String
  pages         Page[]
  sessions      Session[]
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@index([email])
  @@index([createdAt])
}

model Session {
  id         String   @id @default(cuid())
  token      String   @unique
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  createdAt  DateTime @default(now())
  expiresAt  DateTime

  @@index([userId])
  @@index([expiresAt])
  @@index([token])
}

