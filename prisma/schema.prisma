generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Page {
  id              String   @id @default(cuid())
  slug            String   @unique
  editToken       String   @unique
  title           String
  description     String?
  eventDateTime   DateTime
  bgType          String
  bgColor         String?
  bgImageUrl      String?
  buttons         String   // JSON stringified array of { label, url }
  showBranding    Boolean  @default(true)
  isPro           Boolean  @default(false)
  views           Int      @default(0)
  ownerEmail      String?
  afterLaunchText String?
  analyticsId     String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

